{% extends 'base.html.twig' %}

{% block title %}Page d'accueil
{% endblock %}

{% block body %}
	<main class="container">
		<section class="row">
			<div class="col-12">
				<h1>Site E-commerce</h1>
				<p>Bienvenue dans notre boutique</p>
			</div>
			{% for categorie in categories %}
				{% if categorie.parent == null %}
					<div class="col-12">
						<h2>{{ categorie.name }}</h2>
					</div>
				{% else %}
					<div class="col-4">
						<div class="card h-100">
							<div class="card-body">
								<h3 class="card-title">{{ categorie.name }}</h3>
								<a href="#" class="btn btn-primary">Voir les produits</a>
							</div>
						</div>
						<a href="#" class="btn btn-primay"></a>
					</div>
				{% endif %}
			{% endfor %}
			<div class="col-12"></div>
		</section>
	</main>
{% endblock %}
